<title><%= full_title(yield(:title)) %></title>
<br>
<p id="notice"><%= notice %></p>
<div class="row">
	<div class=" col-sm-4 col-md-2">
		<img src="<%= @movie.movie_image_url %>" width="125" height="175" class="" border="0" alt="Medium Movie"/></br>
		<a href="<%= @movie.movie_trailer_url %>"><font color="#3CBBC9"><strong>Watch trailer on</font></strong><font color="#F73F31"> YouTube</font></a><span class="glyphicon glyphicon-share-alt btn-lg"></span>
</br>
	</div>

  	<div class="col-sm-6 col-md-6 col-lg-6" id="groks">
          <%= render @movie.groks %>
      	<%= will_paginate @groks %>
	</div>
	<div class="col-sm-12 col-md-4 col-lg-2">
		<p class="pitch">Got another 30 seconds? Listen to more <%=link_to "Moviegroks.", groks_path %></p>
	</div>
</div>
<%= link_to 'Back', movies_path %>